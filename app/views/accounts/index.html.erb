<%= render "shared/flashes" %>
<%= render "shared/navbarmat" %>

<div class="container mt-5">
<div class="row">
						<div class="col-12 col-lg-12 col-xxl-12 d-flex">
							<div class="card flex-fill">
								<div class="card-header">

									<h5 class="card-title mb-0">Municípios Cadastrados</h5>
								</div>
								<table class="table table-hover my-0">
									<thead>
										<tr>
											<th>Id</th>
											<th class="d-none d-xl-table-cell">Município</th>
											<th class="d-none d-xl-table-cell">Subdomínio</th>
                      <th class="d-none d-xl-table-cell"></th>
										</tr>
									</thead>
									<tbody>
                    <% @accounts.each do |a| %>
										<tr>
											<td> <%= a.id %></td>
											<td class="d-none d-xl-table-cell"><%= a.name %></td>
											<td class="d-none d-xl-table-cell"><%= a.subdomain %></td>
                      <td class="d-none d-md-table-cell">
                      <%= link_to "Deletar", account_path(a), data: { method: :delete, confirm: "Tem certeza?" }, class: "waves-effect waves-light btn-small red darken-3" %>
                      <%= link_to "Editar", edit_account_path(a), class: "waves-effect waves-light btn-small yellow darken-2" %>
                      <%= link_to "Abrir", account_path(a), class: "waves-effect waves-light btn-small" %>
                      </td>
										</tr>
                    <% end %>
									</tbody>
								</table>
							</div>
						</div>
      </div>
</div>
</div>
