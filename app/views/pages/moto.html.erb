
<%= render "shared/navbar" %>

<div class="container">
 <div class="row mt-5">
    <div class="card shadow rounded-3 " style="--bs-border-opacity: .2;">
    <div class="card-body callout callout-primary">
      <h5 class="card-title mt-3"><h2>Olá, Motorista.</h2>
      <p></p>
      <% if current_user.saldos[0].nil? %>
        <div><h3>Saldo total de <strong> R$ 0 </strong></h3></div>
      <% else %>
        <div><h3>Saldo total de <strong> R$ <%= current_user.saldos[0].saldo_total %></strong></h3></div>
      <% end %>
        <div class="mt-5">Você possui <strong><%= current_user.saldos.count %></strong> viagens para realizar</div>
      </h5>
    </div>
    <div class="progress" style="height: 3px;">
  <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
  </div>
 </div>

 <div class="container-fluid p-0">
					<h1 class="h3 mb-3"><strong>TFD</strong> Dashboard</h1>
					<div class="row">
						<div class="col-xl-12 col-xxl-12 d-flex">
							<div class="w-100">
								<div class="row">
									<div class="col-sm-6">
										<div class="card">
											<div class="card-body">
												<div class="row">
													<div class="col mt-0">
														<h5 class="card-title">Veículos Atribuídos</h5>
													</div>
													<div class="col-auto">
														<div class="stat text-primary">
															<i class="align-middle" data-feather="truck"></i>
														</div>
													</div>
												</div>
												<h1 class="mt-1 mb-3"><%= current_user.vehicles.count %></h1>
												<div class="mb-0">
													<span class="text-danger"> <i class="mdi mdi-arrow-bottom-right"></i></span>
													<span class="text-muted"></span>
												</div>
											</div>
										</div>
										<div class="card">
											<div class="card-body">
												<div class="row">
													<div class="col mt-0">
														<h5 class="card-title">Veículos Disponíveis</h5>
													</div>

													<div class="col-auto">
														<div class="stat text-primary">
															<i class="align-middle" data-feather="users"></i>
														</div>
													</div>
												</div>
												<h1 class="mt-1 mb-3"><%= current_user.vehicles.where(status:"Liberado").count %></h1>
												<div class="mb-0">
													<span class="text-success"> <i class="mdi mdi-arrow-bottom-right"></i></span>
													<span class="text-muted"></span>
												</div>
											</div>
										</div>
									</div>
									<div class="col-sm-6">
										<div class="card">
											<div class="card-body">
												<div class="row">
													<div class="col mt-0">
														<h5 class="card-title">Veículos em Manutencão</h5>
													</div>

													<div class="col-auto">
														<div class="stat text-primary">
															<i class="align-middle" data-feather="dollar-sign"></i>
														</div>
													</div>
												</div>
												<h1 class="mt-1 mb-3"><%= current_user.vehicles.where.not(status:"Liberado").count %></h1>
												<div class="mb-0">
													<span class="text-success"> <i class="mdi mdi-arrow-bottom-right"></i></span>
													<span class="text-muted"></span>
												</div>
											</div>
										</div>
										<div class="card">
											<div class="card-body">
												<div class="row">
													<div class="col mt-0">
														<h5 class="card-title">Viagens realizadas</h5>
													</div>

													<div class="col-auto">
														<div class="stat text-primary">
															<i class="align-middle" data-feather="shopping-cart"></i>
														</div>
													</div>
												</div>
												<h1 class="mt-1 mb-3"><%= current_user.travels.where.not(status: "A iniciar").count %></h1>
												<div class="mb-0">
													<span class="text-danger"> <i class="mdi mdi-arrow-bottom-right"></i>  </span>
													<span class="text-muted"></span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>





</div>
