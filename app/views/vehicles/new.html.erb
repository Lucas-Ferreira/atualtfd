<%= render "shared/flashes" %>
<%#= render "shared/navbar2" %>
<%= render "shared/navbarmat" %>

<style>
.input-field input[type=text]:focus {
     border-bottom: 1px solid red !important;
     box-shadow: 0 1px 0 0 red !important;
   }
</style>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
     <% if @vehicle.errors.any? %>
      <h3>The following errors prevented the article from being saved:</h3>
      <ul>
        <% @vehicle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
      <div class="d-flex justify-content-center bg-white rounded-3 p-5 shadow">
      <%= form_with model: @vehicle, url: { action: "create" }, class:"row g-1 w-10", local: true do |form| %>
        <%= form.label :modelo %>
        <%= form.text_field :modelo, placeholder: 'Spin', class:"form-control form-control-sm col-auto" %>
        <% @vehicle.errors.full_messages_for(:modelo).each do |message| %>
        <p class="text-danger"><%= message %></p>
        <% end %>
        <div><%= form.label :ano %></div>
        <%= form.text_field :ano, placeholder: '2023', class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :placa %></div>
        <%= form.text_field :placa, placeholder: 'HFG-9090', class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :capacidade %></div>
        <%= form.text_field :capacidade, placeholder: '7', class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :status %></div>
        <%= form.select :status,["Liberado", "Manutencão", "Defeito"], class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :montadora %></div>
        <%= form.select :montadora,
        ["Audi",
        "BMW",
        "Chery",
        "Chevrolet",
        "Chrysler",
        "Citroën",
        "Cross Lander",
        "Fiat",
        "Ford",
        "Honda",
        "Hyundai",
        "Iveco",
        "Jac",
        "Jeep",
        "Kia Motors",
        "Land Rover",
        "Mercedes-Benz",
        "Mitsubishi",
        "Nissan",
        "Peugeot",
        "Renault",
        "Suzuki",
        "TAC",
        "Toyota",
        "Troller",
        "Volkswagen",
        "Volvo",
          ], class:"form-control mb-3" %>
        <div><%= form.label :user_id %></div>
        <%= form.select :user_id, @array_motorista, class:"form-control form-control-sm col-auto" %>
        <div><%= form.submit "Adicionar", class: "btn btn-primary mt-2 text-center" %></div>
      <% end %>
      </div>
    </div>

<%#= simple_form_for @vehicle, class:"row g-1 w-10", validate: true do |f| %>
          <%#= f.input :modelo, label: 'Origem' %>
          <%#= f.input :ano, label: 'Destino' %>
          <%#= f.input :placa, label: 'Especialidade' %>
          <%#= f.input :capacidade, label: 'Capacidade' %>
          <%#= f.input :status, label: 'Horário de partida' %>
          <%#= f.submit "Criar",  class: "btn btn-primary" %>
      <%# end %>


</div>

<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Placeholder" id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input disabled value="I am not editable" id="disabled" type="text" class="validate">
          <label for="disabled">Disabled</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          This is an inline input field:
          <div class="input-field inline">
            <input id="email_inline" type="email" class="validate">
            <label for="email_inline">Email</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
