<%= render "shared/navbarmat" %>
<div class="container mt-5">
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <span class="card-title">
              <ul class="tabs">
                <li class="tab col s4"><a class="active" href="#test1">A iniciar</a></li>
                <li class="tab col s4"><a href="#test2">Em andamento</a></li>
                <li class="tab col s4"><a href="#test3">Encerrado</a></li>
              </ul>
            </div>

            <div id="test1" class="col s12">
            <% @travel.each do |t| %>
              <div class="col s12 m7">
                <div class="card horizontal">
                  <div class="card-image">
                  </div>
                  <div class="card-stacked">
                    <div class="card-content">
                    <p><strong>id:</strong> <%= t.id %></p>
                    <p><strong>Destino:</strong> <%= t.route.origem %></p>
                    <p><strong> Horário de partida:</strong> <%= t.hr_partida %></p>
                    <p><strong> Horário de retorno:</strong> <%= t.hr_volta %></p>
                    </div>
                    <div class="card-action">
                       <%= link_to "Detalhes", travel_path(t.id), class:"waves-effect waves-teal btn-flat" %>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>

            <div id="test2" class="col s12">
            <% @travel_running.each do |t| %>
            <div class="col s12 m7">
              <div class="card horizontal">
                <div class="card-image">
                </div>
                <div class="card-stacked">
                  <div class="card-content">
                  </div>
                  <div class="card-action">
                    <a href="#">Detalhes</a>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
            </div>


            <div id="test3" class="col s12">
              <% @travel_end.each do |t| %>
              <div class="col s12 m7">
              <div class="card horizontal">
                <div class="card-image">
                </div>
                <div class="card-stacked">
                  <div class="card-content">
                    <p><strong>id:</strong> <%= t.id %></p>
                    <p><strong>Destino:</strong> <%= t.route.origem %></p>
                    <p><strong> Horário de partida:</strong> <%= t.hr_partida %></p>
                  </div>
                  <div class="card-action">
                    <%= link_to "Detalhes", travel_path(t.id), class:"waves-effect waves-teal btn-flat" %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            </div>
          </div>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
    $('.tabs').tabs();
  });
</script>
