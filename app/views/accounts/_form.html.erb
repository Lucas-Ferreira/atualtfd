
<div class="d-flex justify-content-center bg-white rounded-3 p-5 shadow">
<div class="row">
    <div class="col-12 col-md-12 offset-lg-3">
<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Município' %>
    <%= f.input :subdomain, label: 'Subdomínio' %>
    <%= f.input :domain, label: 'Domínio' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
      </div>
    </div>
  </div>
