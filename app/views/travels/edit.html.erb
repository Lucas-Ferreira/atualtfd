<%= render "shared/flashes" %>
<%= render "shared/navbar2" %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="d-flex justify-content-center bg-white rounded p-3 shadow">
      <%= form_with model: @travel, class:"row g-1 w-10", local: true do |form| %>
        <%= form.label :status %>
        <%= form.select :status,["A iniciar", "Finalizado"], class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :partida %></div>
        <%= form.text_field :hr_partida, class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :retorno %></div>
        <%= form.text_field :hr_volta, class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :data %></div>
        <%= form.text_field :hr_final, class:"form-control form-control-sm col-auto" %>
        <div><%= form.label :veiculo, "VeÃ­culo" %></div>
        <%= form.collection_select :vehicle, Vehicle.all, :id, :modelo, prompt: true, class:"form-control form-control-sm col-auto" %>
        <div><%= form.submit "Adicionar", class: "btn btn-primary mt-2 text-center" %></div>
      <% end %>
      </div>
    </div>
